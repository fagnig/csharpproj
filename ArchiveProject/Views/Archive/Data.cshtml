@model ArchiveViewModel;

<h2>@Model.tableTitle</h2>
<div style="width:100%; overflow-x:auto;">
    <table id="table_data" class="table table-striped table-condensed">
        <thead>
            <tr>
                <th colspan="2"><a style="vertical-align:bottom;width:100%" class="btn btn-default" asp-action="Index" asp-controller="Archive">Forside</a></th>
                @for (int i = 1; i < Model.typelist.Count; i++) { <th>@Model.typelist[i].Key</th> }
            </tr>
        </thead>
        <tbody>
            @foreach (List<Object> rows in Model.values)
            {
                <tr>
                    <td><input type="button" class="btn btn-default edit" data-id="@rows[0].ToString()" value="Edit" /></td>
                    <td><input type="button" class="btn btn-default delete" data-id="@rows[0].ToString()" value="Delete"/></td>
                    @for (int i = 1; i < rows.Count; i++)
                    {
                    <td>
                        @if (Model.typelist[i].Value.Name.Equals("String"))
                        {
                            <input class="input-sm" type="text" value="@rows[i]" name="@rows[0].ToString()" data-id="@rows[0].ToString()" data-column="@Model.typelist[i].Key" data-table="@Model.tableHash" disabled />
                        }
                        else if (Model.typelist[i].Value.Name.Equals("Boolean"))
                        {
                            <input class="input-sm" type="checkbox" checked="@rows[i]" name="@rows[0].ToString()" data-id="@rows[0].ToString()" data-column="@Model.typelist[i].Key" data-table="@Model.tableHash" disabled />
                        }
                        else if (Model.typelist[i].Value.Name.Equals("Int32"))
                        {
                            <input class="input-sm" type="number" value="@rows[i]" name="@rows[0].ToString()" data-id="@rows[0].ToString()" data-column="@Model.typelist[i].Key" data-table="@Model.tableHash" disabled />
                        }
                        else if (Model.typelist[i].Value.Name.Equals("Date"))
                        {
                            <input class="input-sm" type="date" value="@rows[i]" name="@rows[0].ToString()" data-id="@rows[0].ToString()" data-column="@Model.typelist[i].Key" data-table="@Model.tableHash" disabled />
                        }
                    </td>
                    }
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th colspan="2"><a style="vertical-align:bottom;width:100%" class="btn btn-default" asp-action="Index" asp-controller="Archive">Forside</a></th>
                @for (int i = 1; i < Model.typelist.Count; i++) { <th>@Model.typelist[i].Key</th> }
            </tr>
        </tfoot>
    </table>
</div>
